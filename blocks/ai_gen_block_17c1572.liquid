{% doc %}
  @prompt
    showcase each products on my new arival

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrivals-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-new-arrivals-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-new-arrivals-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-new-arrivals-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 16px 0;
  }

  .ai-new-arrivals-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
  }

  .ai-new-arrivals-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.grid_bottom_spacing }}px;
  }

  .ai-new-arrivals-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-new-arrivals-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .ai-new-arrivals-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-new-arrivals-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-new-arrivals-card-{{ ai_gen_id }}:hover .ai-new-arrivals-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-new-arrivals-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-new-arrivals-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-new-arrivals-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .ai-new-arrivals-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px 0;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-new-arrivals-price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .ai-new-arrivals-price-compare-{{ ai_gen_id }} {
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    margin-left: 8px;
    font-weight: normal;
  }

  .ai-new-arrivals-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin-bottom: 16px;
  }

  .ai-new-arrivals-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    display: inline-block;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-new-arrivals-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-new-arrivals-view-all-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-new-arrivals-view-all-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 32px;
    background-color: {{ block.settings.view_all_button_color }};
    color: {{ block.settings.view_all_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.view_all_button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-new-arrivals-view-all-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.view_all_button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-new-arrivals-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-new-arrivals-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-new-arrivals-content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-new-arrivals-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-new-arrivals-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-new-arrivals-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-new-arrivals-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-new-arrivals-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-new-arrivals-grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-new-arrivals-card-{{ ai_gen_id }}">
            <div class="ai-new-arrivals-image-container-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-new-arrivals-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-new-arrivals-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if block.settings.show_new_badge %}
                <div class="ai-new-arrivals-badge-{{ ai_gen_id }}">
                  {{ block.settings.badge_text }}
                </div>
              {% endif %}
            </div>

            <div class="ai-new-arrivals-content-{{ ai_gen_id }}">
              <h3 class="ai-new-arrivals-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              <div class="ai-new-arrivals-price-{{ ai_gen_id }}">
                {{ product.price | money }}
                {% if product.compare_at_price > product.price %}
                  <span class="ai-new-arrivals-price-compare-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
              </div>

              {% if block.settings.show_description and product.description != blank %}
                <div class="ai-new-arrivals-description-{{ ai_gen_id }}">
                  {{ product.description | strip_html | truncate: 100 }}
                </div>
              {% endif %}

              <a href="{{ product.url }}" class="ai-new-arrivals-button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if block.settings.show_view_all and block.settings.collection.url %}
        <div class="ai-new-arrivals-view-all-{{ ai_gen_id }}">
          <a href="{{ block.settings.collection.url }}" class="ai-new-arrivals-view-all-button-{{ ai_gen_id }}">
            {{ block.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-new-arrivals-grid-{{ ai_gen_id }}">
        {% for i in (1..block.settings.products_to_show) %}
          <div class="ai-new-arrivals-card-{{ ai_gen_id }}">
            <div class="ai-new-arrivals-image-container-{{ ai_gen_id }}">
              <div class="ai-new-arrivals-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
              {% if block.settings.show_new_badge %}
                <div class="ai-new-arrivals-badge-{{ ai_gen_id }}">
                  {{ block.settings.badge_text }}
                </div>
              {% endif %}
            </div>
            <div class="ai-new-arrivals-content-{{ ai_gen_id }}">
              <h3 class="ai-new-arrivals-product-title-{{ ai_gen_id }}">
                <a href="#">Sample Product {{ i }}</a>
              </h3>
              <div class="ai-new-arrivals-price-{{ ai_gen_id }}">$29.99</div>
              {% if block.settings.show_description %}
                <div class="ai-new-arrivals-description-{{ ai_gen_id }}">
                  This is a sample product description that showcases how your new arrivals will look.
                </div>
              {% endif %}
              <a href="#" class="ai-new-arrivals-button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

