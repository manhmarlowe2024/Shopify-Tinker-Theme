{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-instagram-lookbook-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px;
  }

  .ai-instagram-lookbook__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-instagram-lookbook__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 16px;
  }

  .ai-instagram-lookbook__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    opacity: 0.8;
    margin: 0;
  }

  .ai-instagram-lookbook__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .ai-instagram-lookbook__slider-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-instagram-lookbook__slides-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
  }

  .ai-instagram-lookbook__slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    background-color: #f8f8f8;
    aspect-ratio: 1;
  }

  .ai-instagram-lookbook__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-instagram-lookbook__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-instagram-lookbook__image-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-instagram-lookbook__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: white;
    padding: 30px 20px 20px;
  }

  .ai-instagram-lookbook__feedback-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.4;
    margin-bottom: 10px;
  }

  .ai-instagram-lookbook__username-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    opacity: 0.9;
  }

  .ai-instagram-lookbook__navigation-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 30px;
  }

  .ai-instagram-lookbook__nav-button-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-instagram-lookbook__nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: scale(1.1);
  }

  .ai-instagram-lookbook__nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .ai-instagram-lookbook__nav-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-instagram-lookbook__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-instagram-lookbook__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-instagram-lookbook__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.button_color }};
  }

  .ai-instagram-lookbook__counter-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  @media screen and (max-width: 749px) {
    .ai-instagram-lookbook__overlay-{{ ai_gen_id }} {
      padding: 20px 15px 15px;
    }

    .ai-instagram-lookbook__feedback-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-instagram-lookbook__username-{{ ai_gen_id }} {
      font-size: 12px;
    }

    .ai-instagram-lookbook__nav-button-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-instagram-lookbook__nav-button-{{ ai_gen_id }} svg {
      width: 16px;
      height: 16px;
    }
  }
{% endstyle %}

<instagram-lookbook-{{ ai_gen_id }}
  class="ai-instagram-lookbook-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-instagram-lookbook__header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-instagram-lookbook__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}
    {% if block.settings.subtitle != blank %}
      <p class="ai-instagram-lookbook__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-instagram-lookbook__container-{{ ai_gen_id }}">
    <div class="ai-instagram-lookbook__slider-{{ ai_gen_id }}">
      <div class="ai-instagram-lookbook__slides-{{ ai_gen_id }}" data-slides>
        {% for i in (1..6) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign feedback_key = 'feedback_' | append: i
            assign username_key = 'username_' | append: i
            assign image = block.settings[image_key]
            assign feedback = block.settings[feedback_key]
            assign username = block.settings[username_key]
          %}

          {% if image != blank or feedback != blank %}
            <div class="ai-instagram-lookbook__slide-{{ ai_gen_id }}">
              {% if image != blank %}
                <img
                  src="{{ image | image_url: width: 800 }}"
                  alt="{{ image.alt | escape }}"
                  class="ai-instagram-lookbook__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              {% else %}
                <div class="ai-instagram-lookbook__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if feedback != blank or username != blank %}
                <div class="ai-instagram-lookbook__overlay-{{ ai_gen_id }}">
                  {% if feedback != blank %}
                    <div class="ai-instagram-lookbook__feedback-{{ ai_gen_id }}">
                      "{{ feedback }}"
                    </div>
                  {% endif %}
                  {% if username != blank %}
                    <div class="ai-instagram-lookbook__username-{{ ai_gen_id }}">
                      @{{ username }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-instagram-lookbook__navigation-{{ ai_gen_id }}">
      <button
        class="ai-instagram-lookbook__nav-button-{{ ai_gen_id }}"
        data-prev
        aria-label="Previous image"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <div class="ai-instagram-lookbook__dots-{{ ai_gen_id }}" data-dots></div>

      <button
        class="ai-instagram-lookbook__nav-button-{{ ai_gen_id }}"
        data-next
        aria-label="Next image"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    </div>

    <div class="ai-instagram-lookbook__counter-{{ ai_gen_id }}" data-counter></div>
  </div>
</instagram-lookbook-{{ ai_gen_id }}>

<script>
  (function() {
    class InstagramLookbook{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
      }

      connectedCallback() {
        this.slidesContainer = this.querySelector('[data-slides]');
        this.slides = Array.from(this.slidesContainer.children);
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');
        this.counter = this.querySelector('[data-counter]');

        if (this.slides.length === 0) return;

        this.createDots();
        this.updateSlider();
        this.setupEventListeners();
      }

      createDots() {
        this.dotsContainer.innerHTML = '';
        this.slides.forEach((_, index) => {
          const dot = document.createElement('button');
          dot.className = 'ai-instagram-lookbook__dot-{{ ai_gen_id }}';
          dot.setAttribute('data-slide', index);
          dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
          this.dotsContainer.appendChild(dot);
        });
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.previousSlide());
        this.nextButton.addEventListener('click', () => this.nextSlide());

        this.dotsContainer.addEventListener('click', (e) => {
          if (e.target.hasAttribute('data-slide')) {
            this.currentSlide = parseInt(e.target.getAttribute('data-slide'));
            this.updateSlider();
          }
        });

        let touchStartX = 0;
        let touchEndX = 0;

        this.slidesContainer.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        });

        this.slidesContainer.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe();
        });

        const handleSwipe = () => {
          const swipeThreshold = 50;
          const diff = touchStartX - touchEndX;

          if (Math.abs(diff) > swipeThreshold) {
            if (diff > 0) {
              this.nextSlide();
            } else {
              this.previousSlide();
            }
          }
        };

        this.handleSwipe = handleSwipe;
      }

      previousSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlider();
      }

      nextSlide() {
        this.currentSlide = this.currentSlide === this.slides.length - 1 ? 0 : this.currentSlide + 1;
        this.updateSlider();
      }

      updateSlider() {
        const translateX = -this.currentSlide * 100;
        this.slidesContainer.style.transform = `translateX(${translateX}%)`;

        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide === this.slides.length - 1;

        const dots = this.dotsContainer.querySelectorAll('.ai-instagram-lookbook__dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });

        this.counter.textContent = `${this.currentSlide + 1} / ${this.slides.length}`;
      }
    }

    customElements.define('instagram-lookbook-{{ ai_gen_id }}', InstagramLookbook{{ ai_gen_id }});
  })();
</script>

